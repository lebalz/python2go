{
	"name": "python2go",
	"displayName": "python2go",
	"publisher": "lebalz",
	"description": "install and configure python to start straight away",
	"version": "0.0.27",
	"engines": {
		"vscode": "^1.46.0"
	},
	"homepage": "https://github.com/lebalz/python2go/blob/master/README.md",
	"bugs": {
		"url": "https://github.com/lebalz/python2go/issues"
	},
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/lebalz/python2go"
	},
	"galleryBanner": {
		"color": "#ffffff",
		"theme": "light"
	},
	"icon": "logo.png",
	"categories": [
		"Other"
	],
	"extensionPack": [
		"ms-python.python"
	],
	"activationEvents": [
		"onStartupFinished",
		"onCommand:python2go.checkInstallation",
		"onCommand:python2go.install"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "python2go.install",
				"category": "Python2Go",
				"title": "Install"
			},
			{
				"command": "python2go.checkInstallation",
				"category": "Python2Go",
				"title": "Check Installation"
			},
			{
				"command": "python2go.pipInstall",
				"category": "Python2Go",
				"title": "Install pip package"
			},
			{
				"command": "python2go.pipUninstall",
				"category": "Python2Go",
				"title": "Uninstall pip package"
			},
			{
				"command": "python2go.pipUpgradePackage",
				"category": "Python2Go",
				"title": "Upgrade pip package (latest version)"
			},
			{
				"command": "python2go.configure",
				"category": "Python2Go",
				"title": "Configure"
			},
			{
				"command": "python2go.uninstall",
				"category": "Python2Go",
				"title": "Uninstall Python"
			},
			{
				"command": "python2go.pipUpgradeSelf",
				"category": "Python2Go",
				"title": "Upgrade pip"
			},
			{
				"command": "python2go.setPythonVersion",
				"category": "Python2Go",
				"title": "Set Python version"
			},
			{
				"command": "python2go.addPipUserPathToEnv",
				"category": "Python2Go",
				"title": "Add the local --user path to the env (win only)"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "python2go.configure",
					"when": "python2go:isPythonInstalled"
				},
				{
					"command": "python2go.uninstall",
					"when": "python2go:isPythonInstalled"
				}
			]
		},
		"configuration": {
			"title": "Python2Go",
			"properties": {
				"python2go.skip_installation_check": {
					"type": [
						"boolean"
					],
					"default": false,
					"description": "Wheter to check if python is installed (using choco on windows, pyenv on osx)."
				},
				"python2go.python_version": {
					"type": [
						"string"
					],
					"default": "3.8.3",
					"description": "The python version which will be installed"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"@types/vscode": "^1.46.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"@typescript-eslint/parser": "^2.30.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"@types/node-powershell": "^3.1.1",
		"node-powershell": "^4.0.0"
	}
}